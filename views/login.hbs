<div class="login-content">
        <div class="logo-div">
            <img src="../img/NFL_Draft_logo_200px.png" alt="Logo do NFL Draft" class="draft-logo">
        </div>

        <div class="login_container">
            <h1 class="login-title">LOGIN</h1>
            <form action="/" method="post" class="form-login">
                <label for="usuario" class="label-login">Usuário:</label>
                <input type="text" name="usuário" id="usuario" class="input-login">

                <label for="senha" class="label-login">Senha:</label>
                <input type="password" name="senha" id="senha" class="input-login">

                <button type="submit" class="btn-login">Entrar</button>
            </form>
        </div>
    </div>