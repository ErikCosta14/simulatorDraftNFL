<div class="container-fluid back-branco">
    <div class="card mb-5 mt-5 m-5 back-branco">
        <div class="card-body card-externo">
            <h3 class="card-title m-2">JOGADORES <a href="/jogadores" class="btn btn-danger">Ver Todos</a></h3>
            <p class="card-text">
            <div class="row">
                {{#if jogadores.length}}
                {{#each jogadores}}
                <div class="col-sm-6 col-lg-4 mb-3 mb-sm-0">

                    {{!-- {{#each jogadores}} --}}
                    <div class="card">

                        <div class="card-body card-interno">

                            <div class="container text-center">
                                <div class="row">
                                    <div class="col">
                                        <img src="{{this.imgJog}}" alt="Foto do atleta" class="conteudo-card"
                                            style="width: 120px;">
                                    </div>
                                    <div class="col">
                                        <p class="conteudo-card">Nome: <span
                                                class="span-valor">{{this.nmJogador}}</span></p>
                                        <p class="conteudo-card">Posição: <span
                                                class="span-valor">{{this.posicao}}</span></p>
                                        <p class="conteudo-card">Faculdade: <span
                                                class="span-valor">{{this.faculdade}}</span></p>
                                    </div>
                                </div>
                            </div>

                            <p class="card-text conteudo-card">
                                Descrição: <span class="span-valor">
                                    {{this.descJog}}
                                </span>
                            </p>
                        </div>

                    </div>
                    {{!-- {{/each}} --}}

                </div>
                {{/each}}
                {{else}}
                <h4 class="display-4"></h4>
                {{/if}}
            </div>

        </div>
    </div>
</div>